<% if @question.errors.present? %>
  $('.notice').html("You fill invalid data!")
  <% @question.errors.full_messages.each do |message| %>
    $('.question-errors').html('<p><%= j message %></p>');
  <% end %>
<% else %>
  $('.notice').html("Question was succesfully update!")
  // THIS UPDATE FOR INDEX I MUST DO UPDATE FOR SHOW NEED THINK
  // $('[data-answer-id] .top').html('');
  // <% if @question.best_answer_id %>
  //   $('[data-answer-id="' + <%= @question.best_answer_id %> + '"] .top').html('<span>TOP</span>');
  // <% end %>
  $('[data-question-id="' + "<%= @question.id %>" + '"]')
    .replaceWith("<%= j render 'question', question: @question %>")

  $('.edit-question-link').click(function(e) {
    e.preventDefault();
    $(this).hide();
    question_id = $(this).data('questionId');
    $('form#edit-question-' + question_id).show();
  });
<% end %>
