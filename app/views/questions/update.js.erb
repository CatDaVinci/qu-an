<% if @question.errors.present? %>
  $('.notice').html("You fill invalid data for question!")
  <% @question.errors.full_messages.each do |message| %>
    $('.question-errors').html('<p><%= j message %></p>');
  <% end %>
<% else %>
  $('.success').html('Question was successfully update!')
  $('[data-question-id="' + "<%= @question.id %>" + '"]')
    .replaceWith("<%= j render 'question', question: @question %>")

  $('.edit-question-link').click(function(e) {
    e.preventDefault();
    $(this).hide();
    question_id = $(this).data('questionId');
    $('form#edit-question-' + question_id).show();
  });
<% end %>
